<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/layout_add_new_card1"

    android:layout_height="match_parent">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_title1"
        android:layout_below="@+id/view_first"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/edittext_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Title"
            android:textStyle="bold"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/input_layout_title1"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/edittet_note1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Note"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textview_reminder_text1"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_30dp"
        android:layout_above="@+id/view_second1"/>
    <View
        android:id="@+id/view_second1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/textview_editedat_at1"
        android:background="@color/cardview_dark_background"
        android:layout_marginBottom="@dimen/dimen_10dp"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textview_editedat_at1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edited 2:56 PM"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_10dp" />

</RelativeLayout>