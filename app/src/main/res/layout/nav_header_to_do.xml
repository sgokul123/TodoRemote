<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageView_nav_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginLeft="@dimen/diamen_20dp"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textview_nave_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginLeft="@dimen/diamen_20dp"
        android:hint="User Name"
        android:textSize="@dimen/diamen_30sp"
        android:layout_marginTop="@dimen/diamen_10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

<android.support.v7.widget.AppCompatTextView
    android:id="@+id/textView_nav_email"
        android:layout_marginTop="@dimen/diamen_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/diamen_20sp"
        android:layout_marginLeft="@dimen/diamen_20dp"
        android:hint="User Email"
        android:layout_marginBottom="@dimen/diamen_10dp"
        android:text="android.studio@android.com" />

</LinearLayout>
